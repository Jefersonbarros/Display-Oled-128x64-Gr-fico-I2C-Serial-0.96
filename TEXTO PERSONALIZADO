#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>

/* ===== CONFIGURAÇÃO DO DISPLAY ===== */

#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 64

#define OLED_RESET -1
#define SCREEN_ADDRESS 0x3C   // endereço mais comum do OLED 128x64

Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, OLED_RESET);

/* ===== SETUP ===== */

void setup() {
  Serial.begin(9600);
  delay(100);

  // Inicializa I2C no ESP8266
  // SDA = GPIO4 (D2)
  // SCL = GPIO5 (D1)
  Wire.begin(4, 5);

  // Inicializa o display
  if (!display.begin(SSD1306_SWITCHCAPVCC, SCREEN_ADDRESS)) {
    Serial.println(F("Falha ao iniciar o OLED"));
    while (true);
  }

  // ===== TEXTO NA TELA =====
  display.clearDisplay();

  display.setTextSize(1);              // Tamanho do texto
  display.setTextColor(SSD1306_WHITE); // Cor
  display.setCursor(0, 0);             // Posição inicial

  display.println("Ola, Jeferson!");
  display.println("OLED funcionando");
  display.println("ESP8266 + I2C");

  display.display();                   // MOSTRA NA TELA
}

/* ===== LOOP ===== */

void loop() {
  // Nada aqui por enquanto
}
